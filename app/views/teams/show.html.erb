<%= content_for(:page_class) { 'lg:w-[38rem]' } %>
<div class="sheet flex flex-col">
  <div class="mx-auto text-center">
    <h2 class="nf font-bold text-3xl mb-2">
      <%= @team.name %>
    </h2>
  </div>
  <div class="mt-3">
    <h3 class="text-label mb-1">
      <%= TeamMember.model_name.human %>
    </h3>
    <% @team.members.each do |m| %>
      <div class="flex items-center gap-2">
        <%= image_tag m.avatar_url, class: 'rounded-full w-10' %>
        <%= m.name %>
        <div class="ml-auto">
          <% m.roles.each do |role| %>
            <%=t role.role, scope: [:activerecord, :enums, :team_member_roles, :roles] %>
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>
<%= link_to(dashboard_path, class: 'mt-3 link') { icon_with_text :reply, t('helpers.nav.back') } %>
