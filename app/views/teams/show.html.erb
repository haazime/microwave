<%= content_for(:page_class) { 'lg:w-[38rem]' } %>
<div class="sheet flex flex-col gap-3">
  <div>
    <div class="mx-auto text-center">
      <h2 class="nf font-bold text-3xl mb-2">
        <%= @team.name %>
      </h2>
    </div>
  </div>
  <div class="flex flex-col gap-8">
    <div>
      <h3 class="text-label mb-1">
        <%= Developer.model_name.human %>
      </h3>
      <%= turbo_frame_tag :developers, src: team_developers_path(team_id: @team.id) do %>
        <%= spinner %>
      <% end -%>
    </div>
    <div>
      <h3 class="text-label mb-1">
        <%= ScrumMaster.model_name.human %>
      </h3>
      <%= turbo_frame_tag :scrum_master, src: team_scrum_master_path(team_id: @team.id) do %>
        <%= spinner %>
      <% end -%>
    </div>
  </div>
</div>
<%= link_to(dashboard_path, class: 'mt-3 link') { icon_with_text :reply, t('helpers.nav.back') } %>
