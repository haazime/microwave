<% content_for(:page_class) { 'lg:w-[36rem]' } %>
<h2 class="text-label text-divider-center mb-1">
  <%=t '.title' %>
</h2>
<div class="sheet-form">
  <% if current_user.team.present? %>
    <p>
      <%=t 'already_other_team_member', scope: [:activerecord, :errors, :models, :team, :attributes, :members] %>
    </p>
  <% else -%>
    <%= form_with model: @form, scope: :form, url: teams_path do |f| %>
      <div class="flex flex-col gap-2 mb-1">
        <div class="flex flex-col">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', autocomplete: 'off' %>
        </div>
        <%= render partial: 'team/members/role_fields', locals: { f: f, errors: @form.errors } %>
      </div>
      <%= f.button class: 'btn btn-primary' %>
    <% end -%>
  <% end -%>
</div>
<%= link_to(dashboard_path, class: 'mt-3 link') { icon_with_text :reply, t('helpers.nav.back') } %>
