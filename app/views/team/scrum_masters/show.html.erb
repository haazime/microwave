<%= turbo_frame_tag :scrum_master do %>
  <% if @scrum_master.present? %>
    <div class="flex flex-row items-center gap-2">
      <div>
        <%= image_tag @scrum_master.avatar_url, class: 'rounded-full w-6' %>
      </div>
      <div class="flex flex-col">
        <p class="nf">
          <%= @scrum_master.name %>
        </p>
      </div>
    </div>
  <% else %>
    <p class="text-gray-500">
      <%=t '.no_scrum_master' %>
    </p>
  <% end %>
  <% if current_scrum_master&.can_lead?(current_team) %>
    <div class="mt-2">
      <%= button_to t('.join'), team_scrum_master_url(team_id: current_team.id), class: 'btn-sm btn-primary-outline', data: { test_join_as_sm: 1 } %>
    </div>
  <% end -%>
<% end -%>
