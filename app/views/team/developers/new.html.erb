<% content_for(:page_class) { 'lg:w-[36rem]' } %>
<h2 class="text-label text-divider-center">
  <%=t '.title' %>
</h2>
<div class="my-3 text-center">
  <p class="nf text-lg font-bold bg-white rounded-lg p-3">
    <%= current_team.name %>
  </p>
</div>
<div class="sheet-form">
  <% if current_team.developer?(current_user.id) %>
    <%=t :already_joined, scope: %w(activerecord errors models team attributes developers) %>
  <% else %>
    <%= form_with url: team_developers_path(team_id: current_team.id) do |f| %>
      <% if Array(@errors).any? %>
        <% @errors.full_messages.each do |msg| %>
          <%= msg %>
        <% end -%>
      <% end -%>
      <%= f.button t('.submit'), class: 'btn btn-primary' %>
    <% end -%>
  <% end %>
</div>
<%= link_to(dashboard_path, class: 'mt-3 link') { icon_with_text :reply, t('helpers.nav.back') } %>
